<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".study.StudyFragment"
    android:background="@android:color/white"
    android:elevation="2dp">

    <TextView
        android:id="@+id/study_search_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_additional_margin"
        android:layout_marginTop="@dimen/default_additional_margin"
        android:text="@string/study_search_text"
        android:textSize="@dimen/default_text_size"
        android:textColor="@color/colorPrimaryDark"
        />


    <android.support.v7.widget.CardView
        android:id="@+id/study_search_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/study_search_text"
        android:layout_marginStart="@dimen/default_additional_margin"
        android:layout_marginEnd="@dimen/default_additional_margin"
        android:layout_marginTop="@dimen/default_half_margin"
        app:cardElevation="@dimen/default_half_margin"
        android:background="@android:color/white"
        >

        <EditText
            android:id="@+id/study_search_input"
            android:layout_width="match_parent"
            android:layout_height="@dimen/study_search_input_height"
            android:inputType="text"
            android:background="@android:color/transparent"
            android:drawableEnd="@drawable/ic_search_black_24dp"
            />

    </android.support.v7.widget.CardView>


    <Button
        android:id="@+id/study_search_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/study_search_card"
        android:layout_marginStart="@dimen/default_additional_margin"
        android:text="상세검색"
        android:textColor="@android:color/secondary_text_dark"
        android:background="@android:color/transparent"
        android:drawableStart="@drawable/ic_search_black_24dp"
        />

    <ScrollView
        android:layout_below="@+id/study_search_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColor"
        android:elevation="0dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:layout_marginTop="@dimen/default_half_margin"
                android:layout_marginBottom="@dimen/default_small_margin"
                android:elevation="2dp"
                >

                <TextView
                    android:id="@+id/study_clipping_list_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/study_list_text_margin_top"
                    android:layout_marginStart="@dimen/default_additional_margin"
                    android:layout_marginBottom="@dimen/study_list_text_margin_bottom"
                    android:textSize="@dimen/default_text_size"
                    android:text="@string/study_clipping_list_text"
                    android:textColor="@color/colorPrimaryDark"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/study_clipping_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_additional_margin"
                    android:layout_marginEnd="@dimen/default_additional_margin"
                    android:layout_marginBottom="@dimen/default_margin"
                    android:orientation="horizontal"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:layout_marginBottom="@dimen/default_half_margin"
                android:elevation="2dp"
                >

                <TextView
                    android:id="@+id/study_recommend_list_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/study_list_text_margin_top"
                    android:layout_marginStart="@dimen/default_additional_margin"
                    android:layout_marginBottom="@dimen/study_list_text_margin_bottom"
                    android:textSize="@dimen/default_text_size"
                    android:text="@string/study_recommend_list_text"
                    android:textColor="@color/colorPrimaryDark"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/study_recommend_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_additional_margin"
                    android:layout_marginEnd="@dimen/default_additional_margin"
                    android:layout_marginBottom="@dimen/default_margin"
                    android:orientation="horizontal"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/study_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_half_margin"
                android:layout_marginEnd="@dimen/default_half_margin"
            />

            <include
                layout="@layout/fragment_study_main"
                />
        </LinearLayout>


    </ScrollView>

    <!--<android.support.design.widget.FloatingActionButton-->
        <!--android:id="@+id/fab"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="bottom|end"-->
        <!--android:layout_margin="@dimen/fab_margin"-->
        <!--/>-->

</RelativeLayout>