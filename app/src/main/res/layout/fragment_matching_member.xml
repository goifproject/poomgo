<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_additional_margin"
            android:layout_marginTop="@dimen/study_list_text_margin_top"
            android:layout_marginBottom="@dimen/matching_list_text_margin_bottom"
            android:text="@string/matching_clip_text"
            android:textSize="@dimen/default_text_size"
            android:textColor="@color/colorPrimaryDark"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/matching_clip_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_additional_margin"
            android:layout_marginEnd="@dimen/default_additional_margin"
            android:layout_marginTop="@dimen/study_list_text_margin_top"
            android:layout_marginBottom="@dimen/matching_list_text_margin_bottom"
            android:orientation="horizontal"
            android:overScrollMode="never"
            tools:layoutManager="android.support.v7.widget.LinearLayoutManager" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_additional_margin"
            android:layout_marginTop="@dimen/study_list_text_margin_top"
            android:layout_marginBottom="@dimen/matching_list_text_margin_bottom"
            android:text="@string/matching_recommend_text"
            android:textSize="@dimen/default_text_size"
            android:textColor="@color/colorPrimaryDark"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/matching_recommend_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_additional_margin"
            android:layout_marginEnd="@dimen/default_additional_margin"
            android:layout_marginTop="@dimen/study_list_text_margin_top"
            android:layout_marginBottom="@dimen/matching_list_text_margin_bottom"
            android:orientation="horizontal"
            android:overScrollMode="never"
            tools:layoutManager="android.support.v7.widget.LinearLayoutManager" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/matching_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_half_margin"
        android:layout_marginEnd="@dimen/default_half_margin" />

</LinearLayout>