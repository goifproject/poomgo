<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:background="@drawable/layout_background_round"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        >
        
        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="12dp"
            android:background="#dddddd"
            android:id="@+id/mystudy_recycler_item_image"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="93dp"
            android:layout_marginRight="13dp"
            android:text="여기는 스터디 이름이 들어간다."
            android:textSize="16sp"
            android:id="@+id/mystudy_recycler_item_study_title"
            android:maxLines="1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginLeft="93dp"
            android:layout_marginRight="11dp"
            android:text="여기는 스터디 날짜/시간이 들어간다."
            android:textSize="13sp"
            android:id="@+id/mystudy_recycler_item_study_date"
            android:maxLines="1"
            android:ellipsize="end"
            />
        
    </RelativeLayout>


</LinearLayout>