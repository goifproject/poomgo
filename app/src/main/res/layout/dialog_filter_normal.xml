<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_dialog_normal"
    android:focusableInTouchMode="true">

    <ImageView
        android:id="@+id/dialog_filter_header_background"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_alignParentTop="true"
        android:layout_margin="1dp"
        android:background="@drawable/background_dialog_normal_top" />

    <LinearLayout
        android:id="@+id/dialog_filter_layout_header"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dialog_filter_tune_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="15dp"
            app:srcCompat="@drawable/ic_tune" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@id/dialog_filter_tune_image"
            android:text="상세 검색"
            android:textColor="@color/color_text_white" />

        <TextView
            android:id="@+id/dialog_filter_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:paddingEnd="15dp"
            android:text="검색하기"
            android:textColor="@color/color_text_white" />

    </LinearLayout>

    <EditText
        android:id="@+id/dialog_filter_input_query"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_below="@id/dialog_filter_layout_header"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/background_dialog_normal_edittext"
        android:hint="시, 구, 카테고리"
        android:paddingStart="12dp"
        android:textColorHint="@color/color_text_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/dialog_filter_header_background"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/dialog_filter_type_recycler"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:overScrollMode="never" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:background="@color/backgroundColor" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/dialog_primary_filter_recycler"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:overScrollMode="never" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:background="@color/backgroundColor" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/dialog_sub_filter_recycler"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:overScrollMode="never" />

    </LinearLayout>


</RelativeLayout>


