<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="87dp"
    android:layout_marginRight="@dimen/default_half_margin"
    android:layout_marginLeft="@dimen/default_half_margin"
    android:layout_marginTop="@dimen/default_half_margin"
    android:elevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_message_image"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/testimage"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="12dp"/>

        <TextView
            android:id="@+id/item_message_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/item_message_image"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="13dp"
            android:text="구댜스얌"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/item_message_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/item_mystudy_title"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="13dp"
            android:layout_marginRight="14dp"
            android:text="구댜스얌"
            android:textColor="@android:color/secondary_text_dark"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/item_message_period"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/item_message_image"
            android:layout_below="@id/item_message_title"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="13dp"
            android:text="아니 안 괜찮습니다."
            android:textColor="@android:color/secondary_text_dark"
            android:textSize="11sp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>