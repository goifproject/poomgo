<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/notice_recyclerview_item_layout_width"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/notice_recyclerview_item_layout_margin"
        android:layout_marginRight="@dimen/notice_recyclerview_item_layout_margin"
        android:background="@drawable/layout_background_round"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스터디 이름"
            android:id="@+id/notice_study_name"
            android:layout_marginLeft="@dimen/notice_recyclerview_item_study_name_text_margin"
            android:textSize="@dimen/notice_recyclerview_item_study_name_text_size"
            android:layout_marginTop="@dimen/notice_recyclerview_item_study_name_text_margin"
            android:maxLines="1"
            android:ellipsize="end"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜/시간"
            android:layout_alignParentRight="true"
            android:id="@+id/notice_date"
            android:textSize="@dimen/notice_recyclerview_item_date_text_size"
            android:layout_marginTop="@dimen/notice_recyclerview_item_date_text_margin"
            android:layout_marginRight="@dimen/notice_recyclerview_item_date_text_margin"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스터디 공지합니다.스터디 공지합니다.스터디 공지합니다.스터디 공지합니다.스터디 공지합니다.스터디 공지합니다.스터디 공지합니다.스터디 공지합니다.스터디 공지합니다."
            android:layout_marginTop="@dimen/notice_recyclerview_item_context_text_margin_top"
            android:textSize="@dimen/notice_recyclerview_item_context_text_size"
            android:maxLines="2"
            android:ellipsize="end"
            android:id="@+id/notice_context"
            android:layout_marginLeft="@dimen/notice_recyclerview_item_context_text_margin"
            android:layout_marginRight="@dimen/notice_recyclerview_item_context_text_margin"
            />

    </RelativeLayout>

</LinearLayout>