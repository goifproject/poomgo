<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_half_margin"
            android:layout_marginBottom="@dimen/default_small_margin"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/matching_clipping_list_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_additional_margin"
                android:layout_marginTop="@dimen/study_list_text_margin_top"
                android:layout_marginBottom="@dimen/study_list_text_margin_bottom"
                android:text="@string/matching_clipping_list_text"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/default_text_size" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/favoriteMatchingRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin"
                android:orientation="horizontal"
                tools:layoutManager="android.support.v7.widget.LinearLayoutManager"
                tools:listitem="@layout/item_main_matching_clip"
                tools:orientation="horizontal"
                android:overScrollMode="never" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/matching_recommend_list_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_additional_margin"
                android:layout_marginTop="@dimen/study_list_text_margin_top"
                android:layout_marginBottom="@dimen/study_list_text_margin_bottom"
                android:text="@string/matching_recommend_list_text"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/default_text_size" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recommendMatchingRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin"
                android:orientation="horizontal"
                tools:layoutManager="android.support.v7.widget.LinearLayoutManager"
                tools:listitem="@layout/item_main_matching_clip"
                tools:orientation="horizontal"
                android:overScrollMode="never" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/matching_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_half_margin"
            android:layout_marginEnd="@dimen/default_half_margin" />

    </LinearLayout>

</LinearLayout>
